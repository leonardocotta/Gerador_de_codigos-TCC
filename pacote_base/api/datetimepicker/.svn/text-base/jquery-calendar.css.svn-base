/* calendar styles */
#calendar_div {
	background: #E1E1E1;
	display: none;
	border: 1px solid #8BB1D8;
	z-index: 10; 
	font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	padding: 0;
	padding-left:10px;
	text-align:center;
	margin: 0;
}
#calendar_div a {
	cursor: pointer;
	cursor: hand;
}
button.calendar_trigger {
	width: 25px;
}
img.calendar_trigger {
	margin: 2px;
	vertical-align: middle;
}
#calendar_control, #calendar_links, #calendar_header, #calendar, #calendar_time {
	clear: both;
	float: left;
	width: 185px;
	color: #000066;
}
#calendar_control {
	background: #E1E1E1;
	border-bottom-width: 1px;
	border-bottom-style: solid;
	border-bottom-color: #3399CC;
}
#calendar_links {
	background: #E1E1E1;
	border-bottom-width: 1px;
	border-bottom-style: solid;
	border-bottom-color: #3399CC;
}
#calendar_control a, #calendar_links a {
	font-weight: bold;
	font-size: 80%;
	letter-spacing: 1px;
	color: #000066;
	padding: 2px 5px;
}
#calendar_control a:hover {
	background: #E1E1E1;
	color: #333;
}
#calendar_links a:hover, .calendar_titleRow a:hover {
	background: #E1E1E1;
	color: #000066;
}
#calendar_clear, #calendar_prev {
	float: left;
}
#calendar_current {
	float: left;
	text-align: center;
}
#calendar_close, #calendar_next {
	float: right;
}
#calendar_header, #calendar_time {
	position:relative;
	height:15px;
	padding:5px;
	text-align: center;
}
#calendar_header select, #calendar_time select {
	BACKGROUND-COLOR: #ffffff;
	border: 1px solid #8BB1D8;
	color: #00287D;
}
#calendar {
	BACKGROUND-COLOR: #E1EBF4;
	border: 1px solid #E1EBF4;
	text-align: center;
	font-size: 100%;
}
#calendar a {
	width: 100%;
	display: block;
}
#calendar a:hover {
	color: #000066;
}
#calendar .calendar_titleRow {
	background: #E1EBF4;
}
#calendar .calendar_titleRow a {
	color: #003366;
}
#calendar .calendar_titleRow a:hover {
	background: #E1E1E1;
	color: #000;
}
#calendar .calendar_daysRow {
	BACKGROUND-COLOR: #E1EBF4;
	border: 1px solid #E1EBF4;
	color: #666;
}
#calendar .calendar_daysCell {
	border: 1px solid #fff;
}
#calendar .calendar_daysCell a {
	width: 100%;
}
#calendar .calendar_daysCell a:hover {
	background: E1EBF4;
}
#calendar .calendar_weekEndCell {
	background: #E1EBF4;
	color: #FF2B39;
}
#calendar .calendar_daysCellOver {
	background: #E1E1E1;
	border: 1px solid #8BB1D8;
}
#calendar .calendar_unselectable {
	color: #888;
}
#calendar_today {
	background: #999 !important;
}
#calendar_currentDay {
	background: #fff !important;
}
#calendar_cover {
    display: none; /*sorry for IE5*/
    display/**/: block; /*sorry for IE5*/
    position: absolute; /*must have*/
    z-index: -1; /*must have*/
    filter: mask(); /*must have*/
    top: -1px; /*must have*/
    left: -1px; /*must have*/
    width: 300px; /*must have to match width and borders*/
    height: 300px; /*must have to match maximum height*/ 
}
